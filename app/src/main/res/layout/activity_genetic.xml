<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GeneticActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAB9B9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="遗传算法"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:text="TextView" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存结果" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/im_main"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/main" />

            <ImageView
                android:id="@+id/im_tanxin"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/tanxin" />

            <ImageView
                android:id="@+id/im_huisu"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/huisu" />

            <ImageView
                android:id="@+id/im_dtgh"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/dtgh" />

            <ImageView
                android:id="@+id/im_paint"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/paint" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
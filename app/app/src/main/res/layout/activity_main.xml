<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/filower"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAB9B9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="236dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="0-1背包"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/save"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/save" />

        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/g_name"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/g_weight"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/g_value"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="TextView" />

                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="计算价值重量比" />

                    <Button
                        android:id="@+id/que"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="查看数据" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/im_tanxin"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/tanxin" />

            <ImageView
                android:id="@+id/im_dtgh"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/dtgh" />

            <ImageView
                android:id="@+id/im_huisu"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/huisu" />

            <ImageView
                android:id="@+id/im_ycsf"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/yc" />

            <ImageView
                android:id="@+id/im_paint"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/paint" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>